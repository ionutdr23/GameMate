# Stage 1: Build app
FROM node:18-alpine AS builder
WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
COPY .env.staging .env
RUN npm run build-staging

# Stage 2: Serve the static files
FROM node:18-alpine
WORKDIR /app
RUN npm i -g serve
COPY --from=builder /app/dist/staging ./dist
RUN adduser -D appuser
USER appuser
EXPOSE 3000
CMD ["serve", "-s", "dist", "-l", "3000"]
